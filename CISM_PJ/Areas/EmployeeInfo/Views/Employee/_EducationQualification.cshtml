
<div class="modal fade" id="dialogQualification" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false" aria-hidden="true">
    <div class="modal-dialog w-75 h-100" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Qualification</h5>
                <button type="button" id="btnClose" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                <div class="modal-body">
                    <input type="hidden" id="serial_no_qualification" />
                    <input type="hidden" id="education_id" />

                    <div class="col-sm-12 row mb-1 p-0">
                        <div class="col-sm-4 row mx-0">
                            <label class="col-form-label col-sm-4 px-0">Reg No</label>
                            <div class="col-sm-6 pr-0">
                                <input type="text" class="form-control" id="qual_reg_no" name="qual_reg_no" maxlength="50" readonly />
                                <em id="qual_reg_no_error" class="error error_msg"></em>
                            </div>
                        </div>
                    </div>


                    <div class="col-sm-12 row mb-1 p-0">
                        <div class="col-sm-4 row mx-0">
                            <label class="col-form-label col-sm-4 px-0">Year From<span style="color:red;">*</span></label>
                            <div class="col-sm-6 pr-0">
                                <input type="text" class="form-control" id="qual_year_from" name="qual_year_from" maxlength="50" />
                                <em id="qual_year_from_error" class="error error_msg"></em>
                            </div>
                        </div>
                        <div class="col-sm-4 row mx-0">
                            <label class="col-form-label col-sm-4 px-3">To<span style="color:red;">*</span></label>
                            <div class="col-sm-6 pr-0">
                                <input type="text" class="form-control" id="qual_year_to" name="qual_year_to" maxlength="50" autocomplete="off" />
                                <em id="qual_year_to_error" class="error error_msg"></em>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 row mb-1 p-0">
                        <div class="col-sm-4 row mx-0">
                            <label class="col-form-label col-sm-4 px-0">School<span style="color:red;">*</span></label>
                            <div class="col-sm-6 pr-0">
                                <input type="text" class="form-control" id="school" name="school" maxlength="50" />
                                <em id="school_error" class="error error_msg"></em>
                            </div>
                        </div>
                        <div class="col-sm-4 row mx-0">
                            <label class="col-form-label col-sm-4 px-3">Course<span style="color:red;">*</span></label>
                            <div class="col-sm-6 pr-0">
                                <input type="text" class="form-control" id="courses" name="courses" maxlength="50" autocomplete="off" />
                                <em id="courses_error" class="error error_msg"></em>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 row mb-1 p-0">
                        <div class="col-sm-4 row mx-0">
                            <label class="col-form-label col-sm-4 px-0">Degree</label>
                            <div class="col-sm-6 pr-0">
                                <input type="text" class="form-control" id="degree_obtained" name="degree_obtained" maxlength="50" />
                                <em id="degree_obtained_error" class="error error_msg"></em>
                            </div>
                        </div>
                    </div>


                    <div class="form-group row mb-0">
                        <div class="offset-sm-4 col-sm-3">
                            <button type="button" class="btn btn-primary" id="btnQualificationAdd">
                                <i class="fa fa-plus"></i> <lable id="lblQualificationAction"> Add</lable>
                            </button>
                            <button type="button" class="btn btn-danger" id="btnClearQualification">
                                <i class="fa fa-close"></i> Clear
                            </button>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group row">
                        <div class="col-sm table-responsive pre-scrollable px-1">
                            <table id="QualificationTable" class="table table-bordered table-sm" style="table-layout:fixed">
                                <thead>
                                    <tr>
                                        <th style="width:5%">S/No</th>
                                        <th style="width:20%">Reg No</th>
                                        <th style="width:10%">Year From</th>
                                        <th style="width:13%">Year To</th>
                                        <th style="width:15%">School</th>
                                        <th style="width:11%">Course</th>
                                        <th style="width:11%">Degree</th>
                                        <th style="width:15%"></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-danger" data-dismiss="modal" value="Close" />
                </div>
        </div>
    </div>
</div>

