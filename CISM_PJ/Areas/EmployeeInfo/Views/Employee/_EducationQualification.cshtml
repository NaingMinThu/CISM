<script src="~/Scripts/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
    var serial_no_qualification = 0;
    $('#btnClearQualification').click(function (e) {
        clear_Qualification();
    });

    $('#btnQualificationAdd').click(function (e) {
         console.log("True");
        if ($("#qual_reg_no").val() != "" && $("#qual_reg_no").val() != null &&
            $("#qual_year_from").val() != "" && $("#qual_year_from").val() != null &&
            $("#qual_year_to").val() != "" && $("#qual_year_to").val() != null &&
            $("#school").val() != "" && $("#school").val() != null &&
            $("#courses").val() != "" && $("#courses").val() != null &&
            $("#degree_obtained").val() != "" && $("#degree_obtained").val() != null) {
            console.log("True");
            var schoolInfo = Qualifications.filter(x => x.courses == $('#courses').val() && x.serial_no_qualification != $('#serial_no_qualification').val());
            console.log(schoolInfo);
            if (schoolInfo.length == 0) {

                if ($("#serial_no_qualification").val() != "" && $("#serial_no_qualification").val() != null) {
                    $.each(Qualifications, function (i, obj) {
                        if (obj.serial_no_qualification == $("#serial_no_qualification").val()) {
                            obj = BindQualification(obj);
                            return false;
                        }
                    });
                }
                else {
                    let a = BindQualification({});
                    Qualifications.push(a);
                }
                console.log(Qualifications);
                $("#QualificationTable tbody").empty();
                showQualification();
                clear_Qualification();
            }
            else {
                toastr.error("This course is already existed!", "Error."),
                    setTimeout(function () { }, 1e4);
            }
        }
        else {
            console.log("False");
            if ($("#qual_reg_no").val() == "" || $("#qual_reg_no").val() == null) {
                $("#qual_reg_no_error").text("Reg No is required!");
            }
            else {
                $("#qual_reg_no_error").text("");
            }

            if ($("#qual_year_from").val() == "" || $("#qual_year_from").val() == null) {
                $("#qual_year_from_error").text("Year From is required!");
            }
            else {
                $("#qual_year_from_error").text("");
            }

            if ($("#qual_year_to").val() == "" || $("#qual_year_to").val() == null) {
                $("#qual_year_to_error").text("Year To is required!");
            }
            else {
                $("#qual_year_to_error").text("");
            }

            if ($("#school").val() == "" || $("#school").val() == null) {
                $("#school_error").text("School is required!");
            }
            else {
                $("#school_error").text("");
            }

            if ($("#courses").val() == "" || $("#courses").val() == null) {
                $("#courses_error").text("Course is required!");
            }
            else {
                $("#courses_error").text("");
            }

            if ($("#degree_obtained").val() == "" || $("#degree_obtained").val() == null) {
                $("#degree_obtained_error").text("Degree is required!");
            }
            else {
                $("#degree_obtained_error").text("");
            }
        }
    });

    function BindQualification(obj) {
        obj.reg_no = $("#qual_reg_no").val();
        obj.education_id = $("#education_id").val();
        obj.year_from = $("#qual_year_from").val();
        obj.year_to = $("#qual_year_to").val();
        obj.syear_from = $("#qual_year_from").val();
        obj.syear_to = $("#qual_year_to").val();
        obj.school = $("#school").val();
        obj.courses = $('#courses').val();
        obj.degree_obtained = $('#degree_obtained').val();
        return obj;
    }

    function showQualification() {
        serial_no_qualification = 0;
        if (Qualifications.length === 0) return;
        $("#QualificationTable tbody").empty();
        $.each(Qualifications, function (i, obj) {
            serial_no_qualification += 1;
            obj.serial_no_qualification = serial_no_qualification;
            //obj.year_from = syear_from;
            //obj.syear_to = syear_to;
            $("#QualificationTable tbody").append(create_Rowstring_Qualification(obj));
        });
    }

    function create_Rowstring_Qualification(row) {
        var tblrow = "<tr>";

        tblrow += create_Colstring_Qualification(row.serial_no_qualification, false);
        tblrow += create_Colstring_Qualification(row.reg_no, false);
        tblrow += create_Colstring_Qualification(row.syear_from, false);
        tblrow += create_Colstring_Qualification(row.syear_to, false);
        tblrow += create_Colstring_Qualification(row.school, false);
        tblrow += create_Colstring_Qualification(row.courses, false);
        tblrow += create_Colstring_Qualification(row.degree_obtained, false);
        var td4 = "<td>" +
            "<button type='button'" +
            "onclick=edit_Qualification('" + row.serial_no_qualification + "'); " +
            'style="color: white; " class="btn btn-primary btn-sm"><span class="fa fa-edit"></span>&nbsp;Edit' +
            "</button>";

        var td5 =
            "<button type='button'" +
            "onclick=deleting_Qualification('" + row.serial_no_qualification + "','" + row.education_id + "'); " +
            'style="color: white; " class="btn btn-danger btn-sm"><span class="fa fa-edit"></span>&nbsp;Delete' +
            "</button>"
        "</td></tr > ";

        tblrow += td4 + td5 + "</tr>";
        return tblrow;
    }

    function create_Colstring_Qualification(data, isalignright) {
        var tblcol = "<td" + (isalignright ? " class='text-right'>" : ">") + data + "</td>";
        return tblcol;
    }

    function reserialize_Previous() {
        var count = 0;
        var activecount = $.grep(Qualifications, function (obj) { return obj.state != 'Deleted'; }).length;
        $.each(Qualifications, function (index, obj) {
            if (obj.state != "Deleted") {
                count += 1;
                obj.serial_no_qualification = count;
            }
            else {
                activecount += 1;
                obj.serial_no_qualification = activecount;
            }
        });
    }

    function deleting_Qualification(serial,prv_shool_id) {
        Qualifications = $.grep(Qualifications, function (obj) { return obj.serial_no_qualification != serial; });
        console.log(Qualifications);
        $("#QualificationTable tbody").empty();
        showQualification();
    }

    function edit_Qualification(serial) {
        $.each(Qualifications, function (i, obj) {
            if (obj.serial_no_qualification == serial) {
                $("#serial_no_qualification").val(serial);
                $("#education_id").val(obj.education_id);
                $("#qual_reg_no").val(obj.reg_no);
                $("#qual_year_from").val(obj.syear_from);
                $("#qual_year_to").val(obj.syear_to);
                $("#school").val(obj.school);
                $("#courses").val(obj.courses);
                $("#degree_obtained").val(obj.degree_obtained);
                $("#lblQualificationAction").text("Update");
                return false;
            }
        });
    }

    function clear_Qualification() {
        $("#serial_no_qualification").val("");
        $("#education_id").val("");
        //$("#qual_reg_no").val("");
        $("#school").val("");
        $("#courses").val("");
        $("#degree_obtained").val("");
        setToday("#qual_year_from");
        setToday("#qual_year_to");
        $("#lblQualificationAction").text("Add");
        $("#qual_reg_no_error").text("");
        $("#qual_year_from_error").text("");
        $("#qual_year_to_error").text("");
        $("#school_error").text("");
        $("#courses_error").text("");
        $("#degree_obtained_error").text("");
    }
</script>
