<script src="~/Scripts/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
    var serial_no_Histories = 0;
    $('#btnClearHistories').click(function (e) {
        clear_Histories();
    });

    $('#btnHistoriesAdd').click(function (e) {
        if ($("#his_reg_no").val() != "" && $("#his_reg_no").val() != null &&
            $("#his_year_from").val() != "" && $("#his_year_from").val() != null &&
            $("#his_year_to").val() != "" && $("#his_year_to").val() != null &&
            $("#employer").val() != "" && $("#employer").val() != null &&
            $("#job_title").val() != "" && $("#job_title").val() != null &&
            $("#salary").val() != "" && $("#salary").val() != null) {
            console.log("True");
            var schoolInfo = Hisotries.filter(x => x.passed_grade == $('#passed_grade').val() && x.serial_no_Histories != $('#serial_no_Histories').val());
            console.log(schoolInfo);
            if (schoolInfo.length == 0) {

                if ($("#serial_no_Histories").val() != "" && $("#serial_no_Histories").val() != null) {
                    $.each(Hisotries, function (i, obj) {
                        if (obj.serial_no_Histories == $("#serial_no_Histories").val()) {
                            obj = BindHistories(obj);
                            return false;
                        }
                    });
                }
                else {
                    let a = BindHistories({});
                    Hisotries.push(a);
                }
                console.log(Hisotries);
                $("#HistoriesTable tbody").empty();
                showHistoriesTable();
                clear_Histories();
            }
            else {
                toastr.error("This passed grade is already existed!", "Error."),
                    setTimeout(function () { }, 1e4);
            }
        }
        else {
            console.log("False");
            console.log($("#passed_grade").val());
            if ($("#his_reg_no").val() == "" || $("#his_reg_no").val() == null) {
                $("#his_reg_no_error").text("Reg No is required!");
            }
            else {
                $("#his_reg_no_error").text("");
            }

            if ($("#his_year_from").val() == "" || $("#his_year_from").val() == null) {
                $("#his_year_from_error").text("Year From is required!");
            }
            else {
                $("#his_year_from_error").text("");
            }

            if ($("#his_year_to").val() == "" || $("#his_year_to").val() == null) {
                $("#his_year_to_error").text("Year From is required!");
            }
            else {
                $("#his_year_to_error").text("");
            }

            if ($("#employer").val() == "" || $("#employer").val() == null) {
                console.log("true");
                $("#employer_error").text("Employer is required!");
            }
            else {
                console.log("false");
                $("#employer_error").text("");
            }

            if ($("#job_title").val() == "" || $("#job_title").val() == null) {
                $("#job_title_error").text("Job Title is required!");
            }
            else {
                $("#job_title_error").text("");
            }
              if ($("#salary").val() == "" || $("#salary").val() == null) {
                $("#salary_error").text("Salary is required!");
            }
            else {
                $("#salary_error").text("");
            }
        }
    });

    function BindHistories(obj) {
        obj.reg_no = $("#his_reg_no").val();
        obj.employment_history_id = $("#employment_history_id").val();
        obj.year_from = $("#his_year_from").val();
        obj.year_to = $("#his_year_to").val();
        obj.syear_from = $("#his_year_from").val();
        obj.syear_to = $("#his_year_to").val();
        obj.employer = $("#employer").val();
        obj.job_title = $('#job_title').val();
        obj.salary = $('#salary').val();
        return obj;
    }

    function showHistoriesTable() {
        serial_no_Histories = 0;
        console.log("showTeamMemberTable");
        if (Hisotries.length === 0) return;
        $("#HistoriesTable tbody").empty();
        $.each(Hisotries, function (i, obj) {
            serial_no_Histories += 1;
            obj.serial_no_Histories = serial_no_Histories;
            //obj.year_from = syear_from;
            //obj.syear_to = syear_to;
            $("#HistoriesTable tbody").append(create_Rowstring_Histories(obj));
        });
    }

    function create_Rowstring_Histories(row) {
        var tblrow = "<tr>";

        tblrow += create_Colstring_Histories(row.serial_no_Histories, false);
        tblrow += create_Colstring_Histories(row.reg_no, false);
        tblrow += create_Colstring_Histories(row.syear_from, false);
        tblrow += create_Colstring_Histories(row.syear_to, false);
        tblrow += create_Colstring_Histories(row.employer, false);
        tblrow += create_Colstring_Histories(row.job_title, false);
        tblrow += create_Colstring_Histories(row.salary, true);

        var td4 = "<td>" +
            "<button type='button'" +
            "onclick=editing_histories('" + row.serial_no_Histories + "'); " +
            'style="color: white; " class="btn btn-primary btn-sm"><span class="fa fa-edit"></span>&nbsp;Edit' +
            "</button>";

        var td5 =
            "<button type='button'" +
            "onclick=deleting_Histories('" + row.serial_no_Histories + "','" + row.prv_school_id + "'); " +
            'style="color: white; " class="btn btn-danger btn-sm"><span class="fa fa-edit"></span>&nbsp;Delete' +
            "</button>"
        "</td></tr > ";

        tblrow += td4 + td5 + "</tr>";
        return tblrow;
    }

    function create_Colstring_Histories(data, isalignright) {
        var tblcol = "<td" + (isalignright ? " class='text-right'>" : ">") + data + "</td>";
        return tblcol;
    }

    function deleting_Histories(serial,prv_shool_id) {
        Hisotries = $.grep(Hisotries, function (obj) { return obj.serial_no_Histories != serial; });
        console.log(Hisotries);
        $("#HistoriesTable tbody").empty();
        showHistoriesTable();
    }

    function editing_histories(serial) {
        $.each(Hisotries, function (i, obj) {
            if (obj.serial_no_Histories == serial) {
                $("#serial_no_Histories").val(serial);
                $("#employment_history_id").val(obj.employment_history_id);
                $("#his_year_from").val(obj.syear_from);
                $("#his_year_to").val(obj.syear_to);
                $("#employer").val(obj.employer);
                $("#job_title").val(obj.job_title);
                $("#salary").val(obj.salary);
                $("#lblHistories").text("Update");
                return false;
            }
        });
    }

    function clear_Histories() {
        $("#serial_no_Histories").val("");
        $("#employment_history_id").val("");
        setToday("#his_year_from");
        setToday("#his_year_to");
        $("#employer").val("");
        $("#job_title").val("");
        $("#salary").val("");
        $("#lblHistories").text("Add");
        $("#his_reg_no_error").text("");
        $("#his_year_from_error").text("");
        $("#his_year_to_error").text("");
        $("#employer_error").text("");
        $("#job_title_error").text("");
        $("#salary_error").text("");
    }

    $("#salary").keypress(function (e) {
        return isWholeNumber(e);
    });

    function isWholeNumber(evt) {
        evt = (evt) ? evt : window.event;
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }
</script>
